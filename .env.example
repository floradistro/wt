# WhaleTools Native - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
EXPO_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-from-supabase-dashboard

# Dejavoo Payment Processor (optional)
# DEJAVOO_AUTH_KEY=your-dejavoo-auth-key
# DEJAVOO_TPN=your-terminal-profile-number
# DEJAVOO_ENVIRONMENT=sandbox # or production

# API Endpoints
EXPO_PUBLIC_API_URL=https://whaletools.dev

# Sentry Error Monitoring (HIGHLY RECOMMENDED for production!)
# 1. Get your DSN from: https://sentry.io/settings/whaletools/projects/whaletools-native/keys/
# 2. Get your auth token from: https://sentry.io/settings/account/api/auth-tokens/
EXPO_PUBLIC_SENTRY_DSN=https://your-key@whaletools.ingest.sentry.io/your-project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token-here

# Feature Flags
# ENABLE_PAYMENT_PROCESSOR=true
# ENABLE_LOYALTY_PROGRAM=true
# ENABLE_ANALYTICS=false

# Development
# DEV_MODE=true
# LOG_LEVEL=debug
